<!DOCTYPE html>
<html>
<head>
  <title>Chiricker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'bootstrap' %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'bootstrap' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <%= link_to 'Чирикер', root_path, class:"brand" %>
    <ul class="nav">
      <%= link_to 'Лента', persons_feed_path, class:"brand"%>
      <%= link_to 'Читаемые', persons_read_writers_path, class:"brand"%>
    </ul>
    <ul class="nav pull-right">
      <li><%=link_to 'Выйти', destroy_user_session_path, method: :delete %></li>
    </ul>
    <form class="navbar-search pull-right">
      <input type="text" class="search-query" placeholder="Search">
    </form>
  </div>
</div>
<div class="container">
  <%= yield %>
</div>

</body>
</html>