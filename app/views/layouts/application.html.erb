<!DOCTYPE html>
<html>
<head>
  <title>Chiricker</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <%= link_to 'Чирикер', root_path, class: "brand" %>
    <ul class="nav">
      <li><%= link_to 'Лента', persons_feed_path %> </li>
      <li><%= link_to 'Читаемые', persons_read_writers_path %></li>
    </ul>
    <ul class="nav pull-right">
      <li><%= link_to 'Выйти', destroy_user_session_path, method: :delete %></li>
    </ul>
    <%= link_to '<i class="fa fa-cog fa-3x"></i>'.html_safe, edit_persons_path, method: :get, class:"nav pull-right",
    rel:"tooltip", title:"Настройки", data:{placement:"bottom"}%>
    <%= form_tag persons_search_path, :method => 'get', class: "navbar-search pull-right" do %>
        <p>
          <%= text_field_tag :search, params[:search], class: "search-query" %>
        </p>
    <% end %>
  </div>
</div>
<div class="container">
  <%= yield %>
</div>
</body>
</html>