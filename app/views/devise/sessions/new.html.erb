<div class="modal" id="modal">
  <div class="modal-header">
    <h2>Войти</h2>
  </div>

  <p class="text-warning"><%= notice %></p>

  <p class="text-error"><%= alert %></p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="modal-body">
        <div><%= f.label 'Электронная почта' %>
          <%= f.email_field :email, autofocus: true %></div>

        <div><%= f.label 'Пароль' %>
          <%= f.password_field :password, autocomplete: "off" %></div>

        <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me, style: "float:left; margin-right:10px" %> <%= f.label 'Запомнить меня' %></div>
        <% end -%>
      </div>


      <div class="modal-footer">
        <div><%= f.submit "Войти", class: 'btn btn-primary pull-left' %></div>
        <%= render "devise/shared/links" %>
      </div>
<% end %>
</div>

